{
  "dashboard": {
    "id": null,
    "uid": "rev-system-overview",
    "title": "REV System Overview",
    "tags": ["rev", "verification", "hdc", "consensus"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "gridPos": {"x": 0, "y": 0, "w": 8, "h": 6},
        "type": "stat",
        "title": "System Availability",
        "targets": [
          {
            "expr": "(sum(up{job=~\"rev-.*\"})/count(up{job=~\"rev-.*\"}))*100",
            "refId": "A",
            "legendFormat": "Availability"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 95},
                {"color": "green", "value": 99.9}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"x": 8, "y": 0, "w": 8, "h": 6},
        "type": "stat",
        "title": "Verification Throughput",
        "targets": [
          {
            "expr": "sum(rate(rev_verifications_completed_total[5m]))",
            "refId": "A",
            "legendFormat": "Verifications/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 10},
                {"color": "green", "value": 50}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": {"x": 16, "y": 0, "w": 8, "h": 6},
        "type": "stat",
        "title": "Error Rate",
        "targets": [
          {
            "expr": "(sum(rate(rev_errors_total[5m]))/sum(rate(rev_requests_total[5m])))*100",
            "refId": "A",
            "legendFormat": "Error %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 3,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"x": 0, "y": 6, "w": 12, "h": 8},
        "type": "timeseries",
        "title": "Verification Latency (P50, P95, P99)",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(rev_verification_duration_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(rev_verification_duration_seconds_bucket[5m]))",
            "refId": "B",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(rev_verification_duration_seconds_bucket[5m]))",
            "refId": "C",
            "legendFormat": "P99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "fillOpacity": 10,
              "spanNulls": true
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "calcs": ["lastNotNull", "mean", "max"]
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"x": 12, "y": 6, "w": 12, "h": 8},
        "type": "timeseries",
        "title": "HDC Similarity Distribution",
        "targets": [
          {
            "expr": "rev:hdc:similarity:p50",
            "refId": "A",
            "legendFormat": "P50"
          },
          {
            "expr": "rev:hdc:similarity:p95",
            "refId": "B",
            "legendFormat": "P95"
          },
          {
            "expr": "rev:hdc:similarity:p99",
            "refId": "C",
            "legendFormat": "P99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 6,
        "gridPos": {"x": 0, "y": 14, "w": 8, "h": 6},
        "type": "gauge",
        "title": "Consensus Agreement Rate",
        "targets": [
          {
            "expr": "(rate(rev_consensus_agreements_total[5m])/rate(rev_consensus_proposals_total[5m]))*100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "gridPos": {"x": 8, "y": 14, "w": 8, "h": 6},
        "type": "stat",
        "title": "Active Consensus Nodes",
        "targets": [
          {
            "expr": "count(up{job=\"rev-consensus\"} == 1)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 3},
                {"color": "green", "value": 4}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "gridPos": {"x": 16, "y": 14, "w": 8, "h": 6},
        "type": "stat",
        "title": "Byzantine Faults",
        "targets": [
          {
            "expr": "rate(rev_consensus_byzantine_faults_total[5m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "red", "value": 0.001}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "gridPos": {"x": 0, "y": 20, "w": 12, "h": 8},
        "type": "timeseries",
        "title": "Resource Usage by Service",
        "targets": [
          {
            "expr": "sum by (container) (rate(container_cpu_usage_seconds_total{container=~\"rev-.*\"}[5m]))",
            "refId": "A",
            "legendFormat": "CPU: {{container}}"
          },
          {
            "expr": "sum by (container) (container_memory_working_set_bytes{container=~\"rev-.*\"})/1024/1024/1024",
            "refId": "B",
            "legendFormat": "Memory: {{container}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "fillOpacity": 10
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": "/CPU:.*/"},
              "properties": [{"id": "unit", "value": "percentunit"}]
            },
            {
              "matcher": {"id": "byRegexp", "options": "/Memory:.*/"},
              "properties": [{"id": "unit", "value": "GB"}]
            }
          ]
        }
      },
      {
        "id": 10,
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 8},
        "type": "timeseries",
        "title": "GPU Utilization",
        "targets": [
          {
            "expr": "avg by (gpu_id, node) (DCGM_FI_DEV_GPU_UTIL)",
            "refId": "A",
            "legendFormat": "GPU {{gpu_id}} on {{node}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 11,
        "gridPos": {"x": 0, "y": 28, "w": 8, "h": 6},
        "type": "gauge",
        "title": "Cache Hit Rate",
        "targets": [
          {
            "expr": "rev:cache:hit_ratio * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "green", "value": 90}
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "gridPos": {"x": 8, "y": 28, "w": 8, "h": 6},
        "type": "stat",
        "title": "Database Connection Pool",
        "targets": [
          {
            "expr": "rev:db:pool_utilization * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        }
      },
      {
        "id": 13,
        "gridPos": {"x": 16, "y": 28, "w": 8, "h": 6},
        "type": "stat",
        "title": "Message Queue Depth",
        "targets": [
          {
            "expr": "sum(rev:queue:depth)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 1000}
              ]
            }
          }
        }
      },
      {
        "id": 14,
        "gridPos": {"x": 0, "y": 34, "w": 24, "h": 8},
        "type": "timeseries",
        "title": "Network I/O",
        "targets": [
          {
            "expr": "sum by (container) (rate(container_network_transmit_bytes_total{container=~\"rev-.*\"}[5m]))",
            "refId": "A",
            "legendFormat": "TX: {{container}}"
          },
          {
            "expr": "sum by (container) (rate(container_network_receive_bytes_total{container=~\"rev-.*\"}[5m]))",
            "refId": "B",
            "legendFormat": "RX: {{container}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "Bps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 15,
        "gridPos": {"x": 0, "y": 42, "w": 12, "h": 6},
        "type": "table",
        "title": "SLO Status",
        "targets": [
          {
            "expr": "rev:slo:availability",
            "refId": "A",
            "format": "table",
            "instant": true
          },
          {
            "expr": "rev:slo:latency",
            "refId": "B",
            "format": "table",
            "instant": true
          },
          {
            "expr": "rev:slo:error_rate",
            "refId": "C",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "Value #A": "Availability SLO",
                "Value #B": "Latency SLO",
                "Value #C": "Error Rate SLO"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "center",
              "cellOptions": {
                "type": "color-background"
              }
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {"text": "VIOLATED", "color": "red"},
                  "1": {"text": "MET", "color": "green"}
                }
              }
            ]
          }
        }
      },
      {
        "id": 16,
        "gridPos": {"x": 12, "y": 42, "w": 12, "h": 6},
        "type": "logs",
        "title": "Recent Alerts",
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\"}",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": false,
          "sortOrder": "Descending",
          "dedupStrategy": "none",
          "enableLogDetails": true
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "text": "Prometheus",
            "value": "Prometheus"
          },
          "hide": 0,
          "includeAll": false,
          "multi": false,
          "refresh": 1
        },
        {
          "name": "refresh_interval",
          "type": "interval",
          "query": "5s,10s,30s,1m,5m,15m,30m,1h,2h,1d",
          "current": {
            "text": "10s",
            "value": "10s"
          },
          "hide": 0,
          "includeAll": false,
          "multi": false,
          "refresh": 2
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": {
            "type": "prometheus",
            "uid": "$datasource"
          },
          "enable": true,
          "hide": false,
          "iconColor": "rgba(255, 96, 96, 1)",
          "limit": 100,
          "name": "Alerts",
          "showIn": 0,
          "tags": [],
          "type": "alert"
        }
      ]
    }
  }
}